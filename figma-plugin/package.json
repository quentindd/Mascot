{
  "name": "mascot-figma-plugin",
  "version": "1.0.0",
  "description": "Mascot - AI mascot generation plugin for Figma",
  "scripts": {
    "build": "npm run build:code && npm run build:ui && npm run copy:html",
    "build:code": "esbuild src/code.ts --bundle --format=iife --outfile=code.js --target=es2018 --external:figma",
    "build:ui": "vite build",
    "copy:html": "cp src/ui/index.html ui.html && node scripts/inline-ui.js",
    "watch": "tsc --watch",
    "watch:ui": "vite build --watch",
    "dev": "concurrently \"npm run watch\" \"npm run watch:ui\"",
    "lint": "eslint src/**/*.ts"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.88.0",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
