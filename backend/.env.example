# Database
DATABASE_URL=postgresql://user:password@localhost:5432/mascot
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=user
DB_PASSWORD=password
DB_DATABASE=mascot

# Redis (required for animation/pose/logo job queues; local: host/port; Railway: add Redis service and use REDIS_URL)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# REDIS_URL=redis://... (Railway: set from Redis service variable)

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_REFRESH_EXPIRES_IN=30d

# AWS S3 / Object Storage
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=mascot-assets
CDN_BASE_URL=https://cdn.mascot.com

# Stripe (subscriptions: Basic $4.99/30cr, Pro $7.99/65cr, Max $9.99/100cr)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
# Create 3 Products in Stripe with recurring monthly Prices, then set:
STRIPE_PRICE_BASIC=price_...   # $4.99/month, 30 credits
STRIPE_PRICE_PRO=price_...     # $7.99/month, 65 credits
STRIPE_PRICE_MAX=price_...     # $9.99/month, 100 credits

# AI Providers
# Replicate: required for Poses (flux-kontext) and Animations (Veo 3.1 Fast, ~0.4¢/video)
REPLICATE_API_TOKEN=r8_...
# Optional: pose model. Chooses which Replicate model is used for poses.
# - nano-banana or google/nano-banana → Nano Banana (mascot-only edit, no bg, 1080p)
# - prunaai/flux-kontext-fast (default) → Kontext
# - black-forest-labs/flux-kontext-pro, bytedance/seededit-3.0, etc.
# REPLICATE_POSE_MODEL=nano-banana
# REPLICATE_POSE_MODEL=prunaai/flux-kontext-fast
TOGETHER_AI_API_KEY=...
RUNWAY_API_KEY=...

# Google Cloud / Vertex AI (for Gemini 2.5 Flash Image - like MascotAI.app)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# OR for Railway/production (base64 encoded):
# GOOGLE_CLOUD_CREDENTIALS=<base64-encoded-json>
GOOGLE_CLOUD_LOCATION=us-central1

# App
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
# Public URL of this backend (Railway: set to your service URL, e.g. https://mascoty-production.up.railway.app)
BASE_URL=https://mascoty-production.up.railway.app
FRONTEND_URL=http://localhost:5173
FIGMA_PLUGIN_URL=figma://plugin

# Credit Costs
CREDIT_COST_MASCOT=1
CREDIT_COST_ANIMATION=25
CREDIT_COST_LOGO_PACK=20
