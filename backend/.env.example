# Database
DATABASE_URL=postgresql://user:password@localhost:5432/mascot
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=user
DB_PASSWORD=password
DB_DATABASE=mascot

# Redis (local: host/port; Railway: use REDIS_URL from Redis service)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# REDIS_URL=redis://... (Railway: reference Redis service variable)

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_REFRESH_EXPIRES_IN=30d

# AWS S3 / Object Storage
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=mascot-assets
CDN_BASE_URL=https://cdn.mascot.com

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_FREE=price_...
STRIPE_PRICE_ID_CREATOR=price_...
STRIPE_PRICE_ID_STUDIO=price_...
STRIPE_PRICE_ID_AGENCY=price_...

# AI Providers
# Required for Poses (reference image + prompt via consistent-character)
REPLICATE_API_TOKEN=r8_...
# Optional: pose model (default: sdxl-based/consistent-character). Try fofr/consistent-character if needed.
# REPLICATE_POSE_MODEL=sdxl-based/consistent-character
TOGETHER_AI_API_KEY=...
RUNWAY_API_KEY=...

# Google Cloud / Vertex AI (for Gemini 2.5 Flash Image - like MascotAI.app)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# OR for Railway/production (base64 encoded):
# GOOGLE_CLOUD_CREDENTIALS=<base64-encoded-json>
GOOGLE_CLOUD_LOCATION=us-central1

# App
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
FRONTEND_URL=http://localhost:5173
FIGMA_PLUGIN_URL=figma://plugin

# Credit Costs
CREDIT_COST_MASCOT=1
CREDIT_COST_ANIMATION=25
CREDIT_COST_LOGO_PACK=20
